<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>presentation/login.html</welcome-file>
    </welcome-file-list>

            <!-- User Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.userServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/get-user</url-pattern>
        <url-pattern>/add-user</url-pattern>
    </servlet-mapping>

            <!-- Airplane Servlet -->
                <!-- ........ -->
            <!-- Airplanetype Servlet -->
    <servlet>
        <servlet-name>AirplaneTypeServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.airplaneTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AirplaneTypeServlet</servlet-name>
        <url-pattern>/get-types</url-pattern>
    </servlet-mapping>
            <!-- Country Servlet -->
    <servlet>
        <servlet-name>CountryServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.countryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CountryServlet</servlet-name>
        <url-pattern>/get-countries</url-pattern>
        <url-pattern>/get-country</url-pattern>
        <url-pattern>/add-country</url-pattern>
        <url-pattern>/upd-country</url-pattern>

    </servlet-mapping>
            <!-- City Servlet -->
    <servlet>
        <servlet-name>CityServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.cityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CityServlet</servlet-name>
        <url-pattern>/get-cities</url-pattern>
        <url-pattern>/get-city</url-pattern>
        <url-pattern>/add-city</url-pattern>
        <url-pattern>/upd-city</url-pattern>

    </servlet-mapping>

            <!-- Reservation Servlet -->
                <!-- ........ -->

            <!-- Routes Servlet -->
    <servlet>
        <servlet-name>RouteServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.routesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RouteServlet</servlet-name>
        <url-pattern>/get-routes</url-pattern>
        <url-pattern>/get-route</url-pattern>
        <url-pattern>/add-route</url-pattern>
        <url-pattern>/upd-route</url-pattern>
    </servlet-mapping>

            <!-- Schedule Servlet -->
    <servlet>
        <servlet-name>ScheduleServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.scheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScheduleServlet</servlet-name>
        <url-pattern>/get-schedules</url-pattern>
        <url-pattern>/get-schedule</url-pattern>
        <url-pattern>/add-schedule</url-pattern>
        <url-pattern>/upd-schedule</url-pattern>
    </servlet-mapping>

            <!-- Ticket Servlet -->
                <!-- ........ -->
    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.ticketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/get-tickets</url-pattern>
        <url-pattern>/add-ticket</url-pattern>
    </servlet-mapping>

    <!-- Reservation Servlet -->
    <!-- ........ -->
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.reservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/get-reservations</url-pattern>
        <url-pattern>/add-reservation</url-pattern>
    </servlet-mapping>

    <!-- Reservation Servlet -->
    <!-- ........ -->
    <servlet>
        <servlet-name>FlightServlet</servlet-name>
        <servlet-class>com.ast.airlinesystem.controller.flightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlightServlet</servlet-name>
        <url-pattern>/get-flights</url-pattern>
        <url-pattern>/add-flight</url-pattern>
    </servlet-mapping>
</web-app>